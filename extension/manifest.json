{
  "manifest_version": 3,
  "name": "craigslist-extension",
  "version": "1.0.0",
  "description": "Tweaks for Craigslist",
  "author": "Gregg Tavares",
  "content_scripts": [{
    "matches": ["*://*.craigslist.org/*"],
    "css": ["styles.css"],
    "js": ["content.js"]
  }],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "homepage_url": "https://github.com/greggman/craigslist-extension",
  "permissions": [
  ],
  "optional_permissions": [
  ],
  "host_permissions": [
    "*://craigslist.org/",
    "*://*.craigslist.org/"
  ]
}